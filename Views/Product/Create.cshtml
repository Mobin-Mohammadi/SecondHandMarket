@model ISE309_SecondHandMarket.Models.Product

@{
    ViewData["Title"] = "List New Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-dark text-white py-3 text-center">
                <h4 class="mb-0"><i class="bi bi-camera-fill me-2"></i>List a New Item</h4>
            </div>
            <div class="card-body p-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-floating mb-3">
                        <input asp-for="Title" class="form-control" placeholder="Product Title" />
                        <label asp-for="Title"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <input asp-for="Price" class="form-control" placeholder="0.00" />
                                <label asp-for="Price"></label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating mb-3">
                                <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId">
                                    <option value="">-- Select --</option>
                                </select>
                                <label asp-for="CategoryId">Category</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label fw-bold text-secondary small">Product Image</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light"><i class="bi bi-upload"></i></span>
                            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        </div>
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                        <div class="form-text">Upload a local photo of your item.</div>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" style="height: 100px" placeholder="Description"></textarea>
                        <label asp-for="Description"></label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ContactInfo" class="form-control" placeholder="Phone or Email" />
                        <label asp-for="ContactInfo">Seller Contact Info</label>
                        <span asp-validation-for="ContactInfo" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-dark btn-lg shadow-sm">
                            <i class="bi bi-plus-circle me-1"></i> Post Listing
                        </button>
                        <a asp-action="Index" class="btn btn-link text-muted text-decoration-none text-center">Cancel and Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}