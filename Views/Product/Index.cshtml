@model IEnumerable<ISE309_SecondHandMarket.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-dark">Product Management</h2>
    <p>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg me-1"></i> Add New Product
        </a>
    </p>
</div>

<div class="card shadow-sm border-0">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-dark">
                <tr>
                    <th class="ps-4">Preview</th>
                    <th>Product Details</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-4">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="rounded shadow-sm" style="width: 60px; height: 45px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded bg-light text-center border" style="width: 60px; height: 45px; line-height: 45px;">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td>
                            <div class="fw-bold">@item.Title</div>
                            <small class="text-muted">@item.ContactInfo</small>
                        </td>
                        <td class="text-success fw-bold">@item.Price.ToString("C")</td>
                        <td><span class="badge bg-light text-dark border">@item.Category?.Name</span></td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Delete this item?')">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>